@model CRUD_Alumnos.Models.pacienteEnfermedad

@{
    ViewBag.Title = "Crear nueva Relación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Nuevo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nueva Enfermedad para un paciente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })        
        
        <div class="form-group">
            @Html.LabelFor(model => model.NombreCompleto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Action("ListaPacientes", "PacienteEnfermedad")
                @Html.ValidationMessageFor(model => model.NombreCompleto, "", new { @class = "text-danger" })
                <p>
                    @Html.ActionLink("Crear Nuevo Paciente", "CreatePaciente")
                </p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NombreEnfermedad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Action("ListaEnfermedad", "PacienteEnfermedad")
                @Html.ValidationMessageFor(model => model.NombreEnfermedad, "", new { @class = "text-danger" })
                <p>
                    @Html.ActionLink("Crear Nueva Enfermedad", "CreateEnfermedad")
                </p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
